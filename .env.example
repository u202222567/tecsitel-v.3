# =================================
# TECSITEL V.3 - VARIABLES DE ENTORNO
# =================================

# Configuración de Base de Datos
DATABASE_URL=postgresql://usuario:password@localhost:5432/tecsitel
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tecsitel
DB_USER=usuario
DB_PASSWORD=password

# Configuración JWT para autenticación
JWT_SECRET=Tu_clave
JWT_EXPIRES_IN=24h

# Configuración de la aplicación
NODE_ENV=development
PORT=8888
API_BASE_URL=http://localhost:8888

# Configuración de empresa (opcional - se puede configurar desde la app)
COMPANY_RUC=20123456789
COMPANY_NAME=TECSITEL S.A.C.
COMPANY_ADDRESS=AV. EJEMPLO 123, LIMA

# Integración con SUNAT (opcional)
SUNAT_ENDPOINT=https://api.sunat.gob.pe
SUNAT_USER=tu_usuario_sunat
SUNAT_PASSWORD=tu_password_sunat
SUNAT_ENVIRONMENT=beta

# Configuración de correo (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_app
EMAIL_FROM=noreply@tecsitel.com

# Configuración de almacenamiento (opcional)
STORAGE_TYPE=local
AWS_REGION=us-east-1
AWS_BUCKET=tecsitel-uploads
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/tecsitel.log

# Configuración de respaldos
BACKUP_SCHEDULE=0 23 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Configuración de seguridad
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Configuración específica de Perú
PERU_UIT=5150
PERU_RMV=1025
PERU_ASIGNACION_FAMILIAR=102.50
PERU_IGV_RATE=0.18

# URLs externas para validaciones
RUC_VALIDATION_URL=https://api.sunat.gob.pe/v1/contribuyente/ruc
DNI_VALIDATION_URL=https://api.reniec.gob.pe/v1/dni

# Configuración de desarrollo
DEBUG=true
VERBOSE_LOGGING=false
ENABLE_CORS=true
CORS_ORIGIN=*

# Configuración de producción (descomentar para producción)
# NODE_ENV=production
# DEBUG=false
# ENABLE_CORS=false
# CORS_ORIGIN=https://tu-dominio.com

# =================================
# INSTRUCCIONES DE USO:
# =================================
# 1. Copiar este archivo como .env
# 2. Completar las variables según tu configuración
# 3. NUNCA subir el archivo .env al repositorio
# 4. Para producción, configurar variables en Netlify/Vercel

# =================================
# VARIABLES MÍNIMAS REQUERIDAS:
# =================================
# - JWT_SECRET (obligatorio)
# - DATABASE_URL (si usas base de datos externa)

