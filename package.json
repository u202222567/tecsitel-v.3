{
  "name": "tecsitel-v4",
  "version": "4.0.0",
  "description": "Sistema de Gestión Empresarial Tecsitel v4.0 - Solución integral con facturación electrónica, control de personal y cumplimiento normativo",
  "main": "netlify/functions/api.js",
  "scripts": {
    "dev": "netlify dev",
    "build": "echo 'Frontend estático - no requiere build'",
    "start": "netlify dev",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "deploy": "netlify deploy --prod",
    "preview": "netlify deploy",
    "logs": "netlify functions:log api",
    "env:check": "node scripts/check-env.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usuario/tecsitel-v4.git"
  },
  "keywords": [
    "tecsitel",
    "gestion-empresarial",
    "facturacion-electronica",
    "sunat",
    "sunafil",
    "postgresql",
    "netlify",
    "control-asistencia",
    "contabilidad",
    "rrhh"
  ],
  "author": {
    "name": "Tecsitel Peru",
    "email": "admin@tecsitel.com",
    "url": "https://tecsitel.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/usuario/tecsitel-v4/issues"
  },
  "homepage": "https://tecsitel.netlify.app",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5",
    "serverless-http": "^3.2.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43"
  },
  "devDependencies": {
    "@netlify/cli": "^17.10.1",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "optionalDependencies": {
    "sharp": "^0.33.1"
  },
  "peerDependencies": {
    "netlify-cli": "^17.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "netlify/functions/**/*.js",
      "!netlify/functions/**/*.test.js",
      "!netlify/functions/**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "endOfLine": "lf"
  },
  "funding": {
    "type": "individual",
    "url": "https://tecsitel.com/support"
  },
  "config": {
    "postgresVersion": "15",
    "nodeVersion": "18"
  },
  "overrides": {
    "semver": "^7.5.4"
  },
  "resolutions": {
    "minimist": "^1.2.8",
    "lodash": "^4.17.21"
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.3"
  },
  "packageManager": "npm@10.2.3",
  "type": "commonjs",
  "files": [
    "netlify/",
    "*.html",
    "*.css",
    "*.js",
    "package.json",
    "README.md"
  ],
  "directories": {
    "lib": "netlify/functions",
    "test": "tests"
  },
  "metadata": {
    "technology_stack": [
      "Frontend: HTML5, CSS3, JavaScript ES6+",
      "Backend: Node.js, Express.js, Netlify Functions",
      "Database: PostgreSQL (Neon)",
      "Authentication: JWT",
      "Security: bcryptjs, helmet, express-rate-limit",
      "Deployment: Netlify",
      "Version Control: Git"
    ],
    "features": [
      "Sistema de roles y permisos",
      "Gestión de facturas",
      "Control de asistencia",
      "Gestión de personal",
      "Reportes y estadísticas",
      "Cumplimiento normativo SUNAT/SUNAFIL",
      "API RESTful",
      "Interfaz responsive",
      "Autenticación segura",
      "Auditoría de cambios"
    ],
    "compliance": [
      "SUNAT - Facturación electrónica",
      "SUNAFIL - Control de asistencia",
      "MINTRA - Derechos laborales",
      "Ley de Protección de Datos Personales"
    ]
  },
  "security": {
    "password_policy": {
      "min_length": 8,
      "require_uppercase": true,
      "require_lowercase": true,
      "require_numbers": true,
      "require_symbols": false
    },
    "session_policy": {
      "timeout": "8h",
      "refresh_token": false,
      "secure_cookies": true
    },
    "rate_limiting": {
      "api_calls": "100/hour",
      "login_attempts": "5/15min",
      "password_reset": "3/hour"
    }
  },
  "database": {
    "provider": "Neon PostgreSQL",
    "version": "15",
    "connection_pool": "enabled",
    "ssl": "required",
    "backup_frequency": "daily",
    "retention_period": "30 days"
  },
  "deployment": {
    "platform": "Netlify",
    "build_command": "npm run build",
    "deploy_branch": "main",
    "preview_branches": [
      "develop",
      "staging"
    ],
    "environment_variables": [
      "DATABASE_URL",
      "JWT_SECRET",
      "JWT_EXPIRES_IN",
      "NODE_ENV",
      "CORS_ORIGIN"
    ]
  },
  "monitoring": {
    "error_tracking": "Built-in logging",
    "performance_monitoring": "Netlify Analytics",
    "uptime_monitoring": "Netlify Status",
    "log_retention": "7 days"
  },
  "backup": {
    "database": "Automated daily backups via Neon",
    "code": "Git repository with multiple remotes",
    "configuration": "Environment variables in Netlify",
    "documentation": "README and inline comments"
  },
  "development": {
    "local_environment": "netlify dev",
    "hot_reload": "Supported",
    "debugging": "Node.js inspector",
    "testing": "Jest framework",
    "linting": "ESLint + Prettier",
    "git_hooks": "Optional pre-commit hooks"
  },
  "performance": {
    "frontend": {
      "bundle_size": "< 500KB",
      "load_time": "< 3s",
      "mobile_optimized": true,
      "offline_support": "Service Worker ready"
    },
    "backend": {
      "response_time": "< 500ms",
      "concurrent_users": "100+",
      "database_queries": "Optimized with indexes",
      "memory_usage": "< 128MB"
    }
  },
  "accessibility": {
    "wcag_level": "AA",
    "screen_reader": "Compatible",
    "keyboard_navigation": "Full support",
    "color_contrast": "AAA compliant",
    "responsive_design": "Mobile-first"
  },
  "internationalization": {
    "default_language": "es-PE",
    "supported_locales": [
      "es-PE",
      "es-ES"
    ],
    "currency_format": "PEN, USD",
    "date_format": "DD/MM/YYYY",
    "time_zone": "America/Lima"
  }
}